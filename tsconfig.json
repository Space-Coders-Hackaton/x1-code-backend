{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "allowJs": true,

    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    "paths": {
      "@config/*": ["config/*"],
      "@database/*": ["database/*"],
      "@shared/*": ["shared/*"],
      "@utils/*": ["utils/*"],
      "@errors/*": ["shared/errors/*"],
      "@modules/*": ["modules/*"],
      "@lib/*": ["lib/*"],
    },
  },
  "include": [
    "src/**/*"
  ]
}
