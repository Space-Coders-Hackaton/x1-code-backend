{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "allowJs": true,
    "paths": {
      "@config/*": [
        "config/*"
      ],
      "@database/*": [
        "database/*"
      ],
      "@models/*": [
        "models/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@errors/*": [
        "errors/*"
      ],
      "@modules/*": [
        "modules/*"
      ],
    },
  },
  "include": [
    "src/**/*"
  ]
}
